{
    "name": "carpediem/mattermost-php",
    "description": "Mattermost PHP driver to send incoming webhooks",
    "homepage": "https://github.com/carpediem/mattermost-webhook",
    "version": "1.0.0",
    "type": "library",
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "^6.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit": "^6.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Thibaud Dauce",
            "email": "thibaud@dauce.fr",
            "homepage": "https://www.formations-laravel.fr"
        },
        {
            "name": "Carpediem Developper",
            "email": "dev@carpediem.fr",
            "homepage": "https://carpediem.github.io"
        }
    ],
    "autoload": {
        "psr-4": {
            "Carpediem\\Mattermost\\Webhook\\": "src/"
        },
        "files": ["src/functions_include.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Carpediem\\Mattermost\\Webhook\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text; php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
        "phpunit": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text",
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;"
    }
}
